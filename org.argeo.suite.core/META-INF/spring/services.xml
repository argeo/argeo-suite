<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<bean id="userAdminService" class="org.argeo.connect.UserAdminServiceImpl"
		scope="singleton" lazy-init="false">
		<property name="userTransaction" ref="userTransaction" />
		<property name="userAdmin" ref="userAdmin" />
		<property name="userAdminServiceReference" ref="userAdmin" />
	</bean>

	<!-- MAINTENANCE SERVICES -->
	<bean id="resourcesMaintenanceService"
		class="org.argeo.connect.resources.core.ResourcesMaintenanceService" />

	<bean id="activitiesMaintenanceService"
		class="org.argeo.connect.activities.core.ActivitiesMaintenanceService" />

	<bean id="peopleMaintenanceService" class="org.argeo.connect.people.core.PeopleMaintenanceService" />

	<bean id="trackerMaintenanceService"
		class="org.argeo.connect.tracker.core.TrackerMaintenanceService" />

	<!-- There is no maintenance Service for the Documents App yet -->
	<!-- Order is important -->
	<util:list id="knownMaintenanceServices">
		<ref bean="resourcesMaintenanceService" />
		<ref bean="activitiesMaintenanceService" />
		<ref bean="peopleMaintenanceService" />
		<ref bean="trackerMaintenanceService" />
	</util:list>

	<!-- Make the DJ-aying between the various known Apps Maintenance -->
	<bean id="suiteMaintenanceService" class="org.argeo.suite.core.DefaultSuiteMaintenanceService"
		init-method="init" destroy-method="destroy">
		<property name="repository" ref="repository" />
		<property name="workspaceName" value="main" />
		<property name="maintenanceServices" ref="knownMaintenanceServices" />
	</bean>

	<!-- APP SERVICES (backends) -->
	<bean id="resourcesService" class="org.argeo.connect.resources.core.ResourcesServiceImpl" />

	<bean id="activitiesService" class="org.argeo.connect.activities.core.ActivitiesServiceImpl">
		<property name="userAdminService" ref="userAdminService" />
		<property name="resourcesService" ref="resourcesService" />
	</bean>

	<bean id="peopleService" class="org.argeo.connect.people.core.PeopleServiceImpl"
		init-method="init">
		<property name="resourcesService" ref="resourcesService" />
	</bean>

	<bean id="trackerService" class="org.argeo.connect.tracker.core.TrackerServiceImpl">
		<property name="activitiesService" ref="activitiesService" />
	</bean>

	<bean id="documentsService" class="org.argeo.connect.documents.DocumentsService" />

	<bean id="suiteAppService" class="org.argeo.suite.core.DefaultSuiteAppService">
		<property name="resourcesService" ref="resourcesService" />
		<property name="activitiesService" ref="activitiesService" />
		<property name="peopleService" ref="peopleService" />
		<property name="trackerService" ref="trackerService" />
		<property name="documentsService" ref="documentsService" />
	</bean>

	<!-- VARIOUS -->

	<!-- Execute initialization with a system authentication -->
	<bean
		class="org.argeo.cms.spring.AuthenticatedApplicationContextInitialization" />
</beans>
